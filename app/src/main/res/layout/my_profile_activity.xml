<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/btn_back"
                style="@style/Button"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:padding="@dimen/dimen_16_32"
                android:src="@drawable/nav_back_ic" />

            <TextView
                style="@style/SettingRow"
                android:layout_toRightOf="@+id/btn_back"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:text="@string/my_profile"
                android:textColor="@android:color/white" />
        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/activity_new_profile_iv_avatar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/activity_new_profile_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_new_profile_iv_avatar"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimen_16_32" />

                <TextView
                    android:id="@+id/activity_new_profile_tv_depart_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_new_profile_tv_name"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimen_13" />

            </RelativeLayout>

            <include layout="@layout/layout_view_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_normal">

                <TextView
                    android:id="@+id/activity_new_profile_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/login_password_change"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_sync"
                    android:textSize="@dimen/dimen_14" />

                <TextView
                    android:id="@+id/activity_new_profile_tv_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_new_profile_pass"
                    android:inputType="textPassword"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimen_16_32" />

                <TextView
                    android:id="@+id/change_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="11dp"
                    android:layout_marginRight="11dp"
                    android:background="@drawable/bg_change_pass"
                    android:padding="8dp"
                    android:text="Change"
                    android:textColor="@color/colorPrimary" />
            </RelativeLayout>

            <include layout="@layout/layout_view_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_normal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Company Name"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_sync"
                    android:textSize="@dimen/dimen_14" />

                <TextView
                    android:id="@+id/activity_new_profile_tv_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimen_16_32" />
            </LinearLayout>

            <include layout="@layout/layout_view_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_normal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Company ID"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_sync"
                    android:textSize="@dimen/dimen_14" />

                <TextView
                    android:id="@+id/activity_new_profile_tv_company_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimen_16_32" />
            </LinearLayout>

            <include layout="@layout/layout_view_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_normal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="PERSONAL_ID"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_sync"
                    android:textSize="@dimen/dimen_14" />

                <TextView
                    android:id="@+id/activity_new_profile_tv_persion_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimen_16_32" />
            </LinearLayout>


            <include layout="@layout/layout_view_line" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_normal">

                <TextView
                    android:id="@+id/activity_new_profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/email"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_sync"
                    android:textSize="@dimen/dimen_14" />

                <TextView
                    android:id="@+id/activity_new_profile_tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_new_profile_email"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimen_16_32" />

                <ImageView
                    android:id="@+id/sent_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_mail_white_24dp"
                    android:tint="@color/colorPrimary"
                    android:visibility="gone"/>
            </RelativeLayout>

            <include layout="@layout/layout_view_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_normal">

                <TextView
                    android:id="@+id/activity_new_profile_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/cell_phone"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/activity_new_profile_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_new_profile_phone"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_mail_white_24dp"
                    android:tint="@color/colorPrimary"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/activity_new_profile_iv_call_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:layout_toLeftOf="@id/message"
                    android:src="@drawable/ic_phone_white_24dp"
                    android:tint="@color/colorPrimary"
                    android:visibility="gone"/>
            </RelativeLayout>

            <include layout="@layout/layout_view_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_normal">

                <TextView
                    android:id="@+id/activity_new_profile_phone_com"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/company_phone"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/activity_new_profile_tv_phone_com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_new_profile_phone_com"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:id="@+id/message_com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_mail_white_24dp"
                    android:tint="@color/colorPrimary"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/activity_new_profile_iv_call_number_com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:layout_toLeftOf="@id/message_com"
                    android:src="@drawable/ic_phone_white_24dp"
                    android:tint="@color/colorPrimary"
                    android:visibility="gone"/>
            </RelativeLayout>

            <include layout="@layout/layout_view_line" />

            <RelativeLayout
                android:id="@+id/rlDateJoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_normal">

                <TextView
                    android:id="@+id/activity_new_profile_date_of_emloyment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/emloy_date"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/activity_new_profile_date_of_emloyment_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_new_profile_date_of_emloyment"
                    android:textColor="@android:color/black" />

            </RelativeLayout>

            <include layout="@layout/layout_view_line" />

            <RelativeLayout
                android:id="@+id/rlBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_normal">

                <TextView
                    android:id="@+id/activity_new_profile_date_of_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/date_of_birth"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/activity_new_profile_date_of_birth_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_new_profile_date_of_birth"
                    android:textColor="@android:color/black" />

            </RelativeLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>